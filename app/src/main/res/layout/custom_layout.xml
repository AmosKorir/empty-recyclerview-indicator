<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/emptyViewStatus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=""
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <ProgressBar
      android:id="@+id/emptyRecyProgressbar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toTopOf="@+id/emptyViewStatus"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <ImageView
      android:id="@+id/emptyImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="1dp"
      app:layout_constraintBottom_toTopOf="@+id/emptyViewStatus"
      app:layout_constraintEnd_toEndOf="@+id/emptyRecyProgressbar"
      app:layout_constraintStart_toStartOf="@+id/emptyRecyProgressbar"
      app:layout_constraintTop_toBottomOf="@+id/emptyRecyProgressbar"
      app:srcCompat="@android:drawable/ic_menu_info_details"
      />
</androidx.constraintlayout.widget.ConstraintLayout>